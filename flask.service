[Unit]
Description=My Flask App
After=syslog.target network.target

[Service]
User=ubuntu
ExecStart=/bin/bash -c "source /home/ubuntu/catapp/secrets.sh\
&& source /home/ubuntu/catapp/env/bin/activate\
&& python3 /home/ubuntu/catapp/server.py &>> /home/ubuntu/catapp/flask.log"
Restart=always

[Install]
WantedBy=multi-user.target
